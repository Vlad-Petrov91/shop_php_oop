<section class="content">
    <div class="sign-up-box">
        <h2 class="heading"><span>Регистрация</span></h2>
        <form class="sign-up-form" action="/registration/new" method="post">
            <div class="input-box">
                {% if error %}
                    <div class="sign-up-error-message"> {{ error }}</div>
                {% endif %}
                <input type="text" value="{{ login }}" id="login" name="login" placeholder="Логин">
                <input type="password" value="{{ pass }}" id="pass" name="pass" placeholder="Пароль">
                <input type="password" value="{{ passRepeat }}" id="passRepeat" name="passRepeat"
                       placeholder="Повторите пароль">
                <input type="text" value="{{ name }}" id="name" name="name" placeholder="Имя">
                <input type="email" value="{{ email }}" id="email" name="email" placeholder="Email">
            </div>
            <input class="btn" type="submit" name="submit" value="Отправить"><br>
        </form>
    </div>
</section>
