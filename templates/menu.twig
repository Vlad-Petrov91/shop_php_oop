<header class="header">
    <a href="/" class="logo">Магазин на ООП</a>
    <i class="bx bx-menu" id="menu-icon"></i>
    <nav class="navbar">
        <a class="active" href="/">Главная</a>
        <a href="/catalog">Каталог</a>
        <a href="/basket">Корзина(<span id="count">{{ count }}</span>)</a>
        {% if isAuth %}
        <a href="/orders">Мои заказы</a>
        {% endif %}
    </nav>
    <div class="auth">
        {% if isAuth %}

            {{ userName }}
            <a href="/auth/logout">[X]</a>

        {% else %}

            <form class="login" action="/auth/login" method="post">
                <div class="input-box">
                   <div> <input type="text" name="login" placeholder="Логин" value="user1"></div>
                   <div> <input type="password" name="pass" placeholder="Пароль" value="321"></div>
                  <div>  <input class="btn" type="submit" name="submit" value="Войти"></div>
                </div>
            </form>
            <a href="/registration">Регистрация</a>
        {% endif %}
    </div>
</header>
